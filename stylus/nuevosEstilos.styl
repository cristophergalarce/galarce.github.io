@import "nib"
@import "fonts.styl"


placeholder()
	&::-webkit-input-placeholder
		{block}
	&:-moz-placeholder
		{block}
	&::-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}

gris_background = #1E1E1E
gris_texto_medio = #3C3C3C
gris_texto = #5A5A5A
gris_oscuro = #262626
dorado = #CCA276
dorado_oscuro = #AA8663
gris_input = #323232

a
	color gris_texto
	text-decoration none
	&:hover
		color dorado
		transition .5s
body
	background gris_background
	font-family 'pt_serifregular'
	font-size 19px
.logo
	height 273px
	margin 1em auto 0 auto
	width 273px
	overflow hidden
	position relative
	transition .5s
	&:before
		animation 20s rotacion infinite linear
		background url(../img/universo_logo.png) no-repeat center center/100% auto
		box-sizing border-box
		content ''
		position absolute
		width 100%
		height 100%
		left 0
		z-index -1
	img
		width 42px
		margin 42% 0
@keyframes rotacion
	100%
		transform rotate(360deg)
.titulo
	color gris_texto
	font-size 1em
	font-style italic
	font-weight normal
	margin-top 1.5em
	margin-bottom 0
	transition .5s
	&:before
		content '~ '
	&:after
		content ' ~'
.contactos
	color gris_texto
	font-size .85em
	margin-top .3em
	margin-bottom 4em
	.espacio
		&:before
			content ' ~'
	.email
		span
			&:before
				content '@'
.containerNav
	color gris_texto
	height 150px
	max-width 320px
	transition .5s
	.conexion
		display inline-block
		font-style italic
		&:first-child
			margin-left 1em
		&:last-child
			margin-right 1em
		.conexion-soporte
			background url(../img/soporte.png) no-repeat center/100%
			height 24px
			margin 0 auto 2em auto
			width 8px
.formulario
	border-line none
	color dorado
	font-size .8em
	margin 1em auto 0 auto
	max-width 300px
	transition .5s
	textarea
		max-width 100%
		min-height 7em
		min-width 100%
	.input
		background gris_input
		border none
		border-radius .2em
		box-sizing border-box
		display block
		margin-bottom 1em
		padding .7em
		width 100%
		+placeholder()
			color gris_texto
			font-style italic
	.botonInput
		background gris_input
		border none
		border-bottom 3px solid gris_oscuro
		border-radius .2em
		box-sizing border-box
		color gris_texto
		padding .5em 3em
		&:hover
			background dorado
			border-bottom 3px solid dorado_oscuro
			color gris_texto_medio
		&:active
			background dorado
			border none
			color gris_texto_medio
			margin-top 3px
.legal
	color gris_texto_medio
	font-size .7em
	margin 8em 1em 1em 1em

/* Utilitarios */
.text-center
	text-align center
.center-block
	margin 0 auto
.left
	float left
.right
	float right

@media (min-width: 600px)
	body
		position relative
	.logo
		height 303px
		margin 6em auto 0 auto
		width 303px
	.containerNav
		left 0
		max-width 550px
		position absolute
		right 0
		top 7.3em
	.titulo
		margin-top 6em
	.contactos
		margin-bottom 8em
	.formulario
		max-width 350px
		.botonInput
			padding .5em 3.5em

@media (min-width: 700px)
	.containerNav
		max-width 80%
@media (min-width: 900px)
	.containerNav
		max-width 800px